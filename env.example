# =============================================================================
# MANEXUS ONCHAIN TRADING BOT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# Command: cp env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/trading_bot

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION
# -----------------------------------------------------------------------------
# Redis connection string for caching
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# RABBITMQ CONFIGURATION
# -----------------------------------------------------------------------------
# RabbitMQ connection string for message queuing
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# -----------------------------------------------------------------------------
# BACKEND API CONFIGURATION
# -----------------------------------------------------------------------------
# Backend server port
PORT=3333

# Node environment (development | production | test)
NODE_ENV=development

# API base URL (used by frontend to call backend)
BACKEND_URL=http://localhost:3333

# -----------------------------------------------------------------------------
# POOL SYNCHRONIZATION CONFIGURATION
# -----------------------------------------------------------------------------
# Enable/disable automatic pool synchronization cron jobs
ENABLE_POOL_SYNC=true

# DragonSwap API Configuration
# Update with actual DragonSwap API endpoint when available
DRAGONSWAP_API_URL=https://api.dragonswap.app/v1

# Sailor Finance API Configuration
# Update with actual Sailor Finance API endpoint when available
SAILOR_API_URL=https://api.sailor.finance/v1

# API Keys (add if required by DEX APIs)
# DRAGONSWAP_API_KEY=your_api_key_here
# SAILOR_API_KEY=your_api_key_here

# -----------------------------------------------------------------------------
# FRONTEND CONFIGURATION
# -----------------------------------------------------------------------------
# Next.js API URL
NEXT_PUBLIC_API_URL=http://localhost:3333/api

# Frontend URL (for backend CORS and redirects)
FRONTEND_URL=http://localhost:4200

# -----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
# Log level (error | warn | info | debug | verbose)
LOG_LEVEL=info

# Enable detailed query logging (true | false)
LOG_QUERIES=false

# =============================================================================
# QUICK START:
# 1. Copy this file: cp env.example .env
# 2. Start services: pnpm services:start
# 3. Run migrations: pnpm db:setup
# 4. Start dev: pnpm dev
# =============================================================================

